<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutNote"
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:circularflow_radiusInDP="20dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/backgroundofnote"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/icPin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgViewNote"
        android:adjustViewBounds="true"
        app:riv_corner_radius_top_left="10dp"
        app:riv_corner_radius_top_right="10dp"
        app:riv_corner_radius_bottom_left="10dp"
        app:riv_corner_radius_bottom_right="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textTitleV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="25dp"
        android:textSize="28sp"
        android:textColor="#1A1A19"/>
    <TextView
        android:id="@+id/textSubV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="2dp"
        android:textSize="20sp"
        android:includeFontPadding="false"
        android:textColor="#40403B"/>
    <TextView
        android:id="@+id/textDateV"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="5dp"
        android:includeFontPadding="false"
        android:textColor="#555151"
        android:textSize="17sp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelV"
        android:layout_marginStart="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/white"
        android:background="@drawable/labelbackground"/>


</LinearLayout>